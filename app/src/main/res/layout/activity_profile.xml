<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#F1F1F1">

    <TextView
        android:id="@+id/user_name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/back_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_back_24dp"/>

   <ScrollView
       android:id="@+id/scrollView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/back_profile">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingBottom="30dp">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/image_profile"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:src="@drawable/user_profile"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="20dp"
               app:civ_border_color="@android:color/white"
               app:civ_border_width="6dp"/>

           <TextView
               android:id="@+id/name_profile"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/image_profile"
               android:layout_centerHorizontal="true"
               android:gravity="center"
               android:layout_marginTop="18dp"
               android:text="User Name"
               android:textColor="@color/colorPrimary"
               android:textSize="20sp"
               android:textStyle="bold"
               android:paddingBottom="10dp"/>

           <TextView
               android:id="@+id/money_profile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/name_profile"
               android:text="All money"
               android:textSize="17sp"
               android:textStyle="bold"
               android:layout_marginTop="20dp"
               android:layout_marginRight="30dp"
               android:layout_marginLeft="30dp"
               android:paddingLeft="20dp"
               android:paddingTop="10dp"
               android:background="@drawable/shadow_white"
               />

           <LinearLayout
               android:id="@+id/linear_profile_money"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/money_profile"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="30dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/num_money_profile"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="20000"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:textColor="@color/colorPrimary"
                   android:paddingLeft="20dp"
                   android:paddingBottom="15dp"
                   android:paddingTop="10dp"
                   android:paddingRight="20dp"
                   android:background="@android:color/white"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Bath"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:textColor="@color/colorPrimary"
                   android:gravity="end"
                   android:paddingLeft="20dp"
                   android:paddingBottom="15dp"
                   android:paddingTop="10dp"
                   android:paddingRight="20dp"
                   android:background="@android:color/white"
                   />
           </LinearLayout>
           <View
               android:id="@+id/shadow_money"
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:layout_below="@id/linear_profile_money"
               android:layout_marginRight="30dp"
               android:layout_marginLeft="30dp"
               android:background="@drawable/shadow_green"/>

           <TextView
               android:id="@+id/phone_profile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/shadow_money"
               android:text="Phone number"
               android:textSize="17sp"
               android:textStyle="bold"
               android:layout_marginTop="20dp"
               android:layout_marginRight="30dp"
               android:layout_marginLeft="30dp"
               android:paddingLeft="20dp"
               android:paddingTop="10dp"
               android:background="@drawable/shadow_white"
               />

           <TextView
               android:id="@+id/num_phone_profile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="phone number"
               android:layout_below="@+id/phone_profile"
               android:textSize="20sp"
               android:textStyle="bold"
               android:textColor="@color/colorPrimary"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="30dp"
               android:paddingLeft="20dp"
               android:paddingBottom="15dp"
               android:paddingTop="10dp"
               android:paddingRight="20dp"
               android:background="@android:color/white"
               />
           <View
               android:id="@+id/shadow_phone"
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:layout_below="@id/num_phone_profile"
               android:layout_marginRight="30dp"
               android:layout_marginLeft="30dp"
               android:background="@drawable/shadow_green"/>

           <TextView
               android:id="@+id/address_profile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/shadow_phone"
               android:text="Address"
               android:textSize="17sp"
               android:textStyle="bold"
               android:layout_marginTop="20dp"
               android:layout_marginRight="30dp"
               android:layout_marginLeft="30dp"
               android:paddingLeft="20dp"
               android:paddingTop="10dp"
               android:background="@drawable/shadow_white"
               />

           <TextView
               android:id="@+id/detail_address_profile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="21/7 Ban Rong Pao, Pa Ngea, Pa Deat, Chiang Rai, 57190"
               android:layout_below="@+id/address_profile"
               android:textSize="20sp"
               android:textStyle="bold"
               android:textColor="@color/colorPrimary"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="30dp"
               android:paddingLeft="20dp"
               android:paddingBottom="15dp"
               android:paddingTop="10dp"
               android:paddingRight="20dp"
               android:background="@android:color/white"
               />
           <View
               android:id="@+id/shadow_address"
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:layout_below="@id/detail_address_profile"
               android:layout_marginRight="30dp"
               android:layout_marginLeft="30dp"
               android:background="@drawable/shadow_green"/>
       </RelativeLayout>

   </ScrollView>

</RelativeLayout>